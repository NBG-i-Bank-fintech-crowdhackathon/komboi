# Root logger option
log4j.rootLogger=INFO, LOGF

# Direct log messages to a log file
log4j.appender.LOGF=org.apache.log4j.RollingFileAppender

log4j.appender.LOGF.File=/tmp/app_nbg_cbank.log
log4j.appender.LOGF.MaxFileSize=10MB
log4j.appender.LOGF.MaxBackupIndex=10
log4j.appender.LOGF.layout=org.apache.log4j.PatternLayout
log4j.appender.LOGF.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n
